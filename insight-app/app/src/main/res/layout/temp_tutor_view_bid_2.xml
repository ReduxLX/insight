<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <TextView
        android:id="@+id/tv_counter_bid_tvb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Make a counter-bid"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_rate_text_tvb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Rate (Hourly/Weekly)"
        android:textColor="#3658C7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_counter_bid_tvb" />

    <EditText
        android:id="@+id/pt_rate_tvb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Rate ($)"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_rate_text_tvb" />

    <RadioGroup
        android:id="@+id/RadioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/pt_rate_tvb"
        app:layout_constraintTop_toBottomOf="@+id/pt_rate_tvb">

        <RadioButton
            android:id="@+id/rb_hourly_tvb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#2A41CB"
            android:checked="true"
            android:paddingEnd="24dp"
            android:text="Hourly" />

        <RadioButton
            android:id="@+id/rb_weekly_tvb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#2A41CB"
            android:text="Weekly" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Lessons Per Week "
        android:textColor="#3658C7"
        app:layout_constraintStart_toStartOf="@+id/RadioGroup1"
        app:layout_constraintTop_toBottomOf="@+id/RadioGroup1" />

    <Spinner
        android:id="@+id/sp_schedule_tvb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toStartOf="@+id/sp_duration_tvb"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="130dp"
        android:layout_height="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Hours Per Lesson"
        android:textColor="#3658C7"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView8" />

    <Spinner
        android:id="@+id/sp_duration_tvb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/tv_free_text_tvb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Other Free Classes (Optional)"
        android:textColor="#3658C7"
        app:layout_constraintStart_toStartOf="@+id/sp_schedule_tvb"
        app:layout_constraintTop_toBottomOf="@+id/sp_schedule_tvb" />

    <Spinner
        android:id="@+id/sp_hoursPerLesson_tvb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_free_text_tvb"
        app:layout_constraintTop_toBottomOf="@+id/tv_free_text_tvb" />

    <Button
        android:id="@+id/button_send_tvb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/montserrat_bold"
        android:text="Send Bid"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_hoursPerLesson_tvb" />


</androidx.constraintlayout.widget.ConstraintLayout>