<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_tutor_discovery"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:paddingEnd="15dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_main_card_td"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent">

            <TextView
                android:id="@+id/tv_subject_td"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Subject"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/icon_total_tutor_bids_td"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_subject_td"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_subject_td"
                app:srcCompat="@drawable/rectangle_blue" />

            <TextView
                android:id="@+id/tv_total_tutor_bids_td"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/icon_total_tutor_bids_td"
                app:layout_constraintEnd_toEndOf="@+id/icon_total_tutor_bids_td"
                app:layout_constraintStart_toStartOf="@+id/icon_total_tutor_bids_td"
                app:layout_constraintTop_toTopOf="@+id/icon_total_tutor_bids_td" />

            <ImageView
                android:id="@+id/icon_level_td"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="@+id/tv_subject_td"
                app:layout_constraintTop_toBottomOf="@+id/tv_subject_td"
                app:srcCompat="@drawable/level_one" />

            <TextView
                android:id="@+id/tv_level_td"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:layout_marginTop="18dp"
                android:text="Level"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/tv_subject_td"
                app:layout_constraintTop_toBottomOf="@+id/tv_subject_td" />

            <ImageView
                android:id="@+id/icon_name_td"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                app:layout_constraintStart_toStartOf="@+id/tv_subject_td"
                app:layout_constraintTop_toBottomOf="@+id/tv_subject_td"
                app:srcCompat="@drawable/user" />

            <TextView
                android:id="@+id/tv_user_td"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Name"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/icon_name_td"
                app:layout_constraintStart_toEndOf="@+id/icon_name_td" />

            <ImageView
                android:id="@+id/icon_cost_td"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@+id/icon_name_td"
                app:layout_constraintTop_toBottomOf="@+id/icon_name_td"
                app:srcCompat="@drawable/cost" />

            <TextView
                android:id="@+id/tv_rate_td"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cost"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/icon_cost_td"
                app:layout_constraintStart_toStartOf="@+id/tv_user_td" />


            <ImageView
                android:id="@+id/icon_duration_td"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@+id/icon_cost_td"
                app:layout_constraintTop_toBottomOf="@+id/icon_cost_td"
                app:srcCompat="@drawable/duration" />

            <TextView
                android:id="@+id/tv_duration_td"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/icon_duration_td"
                app:layout_constraintStart_toStartOf="@+id/tv_rate_td" />

            <ImageView
                android:id="@+id/icon_schedule_td"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@+id/icon_duration_td"
                app:layout_constraintTop_toBottomOf="@+id/icon_duration_td"
                app:srcCompat="@drawable/schedule" />

            <TextView
                android:id="@+id/tv_schedule_td"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/icon_schedule_td"
                app:layout_constraintStart_toStartOf="@+id/tv_duration_td" />

            <ImageView
                android:id="@+id/icon_contract_duration_td"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/icon_schedule_td"
                app:layout_constraintTop_toBottomOf="@+id/icon_schedule_td"
                app:srcCompat="@drawable/contract_duration" />

            <TextView
                android:id="@+id/tv_contract_duration_td"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contract Duration"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/icon_contract_duration_td"
                app:layout_constraintStart_toStartOf="@+id/tv_schedule_td" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>