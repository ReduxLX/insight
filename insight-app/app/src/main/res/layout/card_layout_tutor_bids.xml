<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_main_card_tb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:padding="15dp"
        android:dividerHeight="0.0px"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent">

            <TextView
                android:id="@+id/tv_subject_tb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Subject"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name_tb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Student Full name"
                android:textColor="@color/gray"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="@+id/tv_subject_tb"
                app:layout_constraintTop_toBottomOf="@+id/tv_subject_tb" />

            <ImageView
                android:id="@+id/icon_cost_tb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@+id/tv_name_tb"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_tb"
                app:srcCompat="@drawable/cost" />

            <TextView
                android:id="@+id/tv_rate_tb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Rate"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/icon_cost_tb"
                app:layout_constraintStart_toEndOf="@+id/icon_cost_tb" />

            <ImageView
                android:id="@+id/icon_duration_tb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@+id/icon_free_tb"
                app:layout_constraintTop_toBottomOf="@+id/icon_free_tb"
                app:srcCompat="@drawable/duration" />

            <TextView
                android:id="@+id/tv_duration_tb"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="12dp"
                android:text="Duration"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/icon_duration_tb"
                app:layout_constraintStart_toEndOf="@+id/icon_duration_tb" />

            <ImageView
                android:id="@+id/icon_schedule_tb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@+id/icon_duration_tb"
                app:layout_constraintTop_toBottomOf="@+id/icon_duration_tb"
                app:srcCompat="@drawable/schedule" />

            <TextView
                android:id="@+id/tv_schedule_tb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Schedule"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/icon_schedule_tb"
                app:layout_constraintStart_toEndOf="@+id/icon_schedule_tb" />


            <ImageView
                android:id="@+id/icon_free_tb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/icon_cost_tb"
                app:layout_constraintTop_toBottomOf="@+id/icon_cost_tb"
                app:srcCompat="@drawable/free_class" />

            <TextView
                android:id="@+id/tv_free_tb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 free class"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/icon_free_tb"
                app:layout_constraintStart_toStartOf="@+id/tv_rate_tb" />

            <Button
                android:id="@+id/button_message_tb"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="162dp"
                android:layout_height="0dp"
                android:drawableLeft="@drawable/message"
                android:drawablePadding="4dp"
                android:fontFamily="@font/montserrat_bold"
                android:includeFontPadding="false"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Send Message"
                android:textAllCaps="false"
                android:textColor="@color/textColorPrimary"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_min="wrap"
                app:layout_constraintTop_toBottomOf="@+id/tv_schedule_tb"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_min="wrap"
                app:rippleColor="@color/colorPrimary" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>