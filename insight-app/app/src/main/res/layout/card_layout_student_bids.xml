<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_main_card_sb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:padding="15dp"
        android:dividerHeight="0.0px"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent">

            <TextView
                android:id="@+id/tv_subject_sb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Subject"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#DE000000"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/icon_cost_sb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@+id/tv_subject_sb"
                app:layout_constraintTop_toBottomOf="@+id/tv_subject_sb"
                app:srcCompat="@drawable/cost" />

            <TextView
                android:id="@+id/tv_rate_sb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Rate"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/icon_cost_sb"
                app:layout_constraintStart_toEndOf="@+id/icon_cost_sb" />

            <ImageView
                android:id="@+id/icon_duration_sb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@+id/icon_cost_sb"
                app:layout_constraintTop_toBottomOf="@+id/icon_cost_sb"
                app:srcCompat="@drawable/duration" />

            <TextView
                android:id="@+id/tv_duration_sb"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="12dp"
                android:text="Duration"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/icon_duration_sb"
                app:layout_constraintStart_toEndOf="@+id/icon_duration_sb" />

            <ImageView
                android:id="@+id/icon_schedule_sb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/icon_duration_sb"
                app:layout_constraintTop_toBottomOf="@+id/icon_duration_sb"
                app:srcCompat="@drawable/schedule" />

            <TextView
                android:id="@+id/tv_schedule_sb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:text="Schedule"
                app:layout_constraintBottom_toBottomOf="@+id/icon_schedule_sb"
                app:layout_constraintStart_toEndOf="@+id/icon_schedule_sb"
                app:layout_constraintTop_toBottomOf="@+id/tv_duration_sb" />

            <ImageView
                android:id="@+id/icon_total_bids_sb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_subject_sb"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/rectangle_blue" />

            <TextView
                android:id="@+id/tv_total_bids_sb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="@+id/icon_total_bids_sb"
                app:layout_constraintEnd_toEndOf="@+id/icon_total_bids_sb"
                app:layout_constraintStart_toStartOf="@+id/icon_total_bids_sb"
                app:layout_constraintTop_toTopOf="@+id/icon_total_bids_sb" />




        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>