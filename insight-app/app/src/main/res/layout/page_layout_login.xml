<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/insight_logo" />

    <TextView
        android:id="@+id/tv_insight_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Insight"
        android:textAlignment="center"
        android:textColor="#2A41CB"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <TextView
        android:id="@+id/tv_login_text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="#2A41CB"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login_decor" />

    <TextView
        android:id="@+id/tv_credentials_text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Please enter your credentials to login"
        android:textAlignment="center"
        android:textColor="#9D9D9D"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_login_text_login"
        app:layout_constraintStart_toStartOf="@+id/tv_login_text_login"
        app:layout_constraintTop_toBottomOf="@+id/tv_login_text_login" />

    <TextView
        android:id="@+id/tv_username_text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Username"
        android:textColor="#2A41CB"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_credentials_text_login"
        app:layout_constraintStart_toStartOf="@+id/tv_credentials_text_login"
        app:layout_constraintTop_toBottomOf="@+id/tv_credentials_text_login" />

    <EditText
        android:id="@+id/pt_username_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/gray_bg"
        android:ems="10"
        android:hint="Enter your username"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        app:layout_constraintStart_toStartOf="@+id/tv_username_text_login"
        app:layout_constraintTop_toBottomOf="@+id/tv_username_text_login" />

    <TextView
        android:id="@+id/tv_password_text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Password"
        android:textColor="#2A41CB"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/pt_username_login"
        app:layout_constraintTop_toBottomOf="@+id/pt_username_login" />

    <EditText
        android:id="@+id/pt_password_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/gray_bg"
        android:ems="10"
        android:hint="Enter your password"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        app:layout_constraintStart_toStartOf="@+id/tv_password_text_login"
        app:layout_constraintTop_toBottomOf="@+id/tv_password_text_login" />

    <Button
        android:id="@+id/button_login_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/montserrat_bold"
        android:text="Login"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/pt_password_login"
        app:layout_constraintStart_toStartOf="@+id/pt_password_login"
        app:layout_constraintTop_toBottomOf="@+id/pt_password_login" />

</androidx.constraintlayout.widget.ConstraintLayout>